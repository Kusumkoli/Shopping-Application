<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
<%- include('../includes/nav.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <div class="grid">
                <% for (let product of products) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.productData.title %>(<%= product.qty %>)</h1>    
                        </header>
                        <div class="card__image">
                            <img src="<%= product.productData.imageURL %>" alt="<%= product.productData.imageURL %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$ <%= product.productData.price %></h2>
                            <p class="product__description"><%= product.productData.description %></p>
                        </div>
                        <div class="card__actions">
                            <form action="/delete-cart-item" method="POST">
                                <input type="hidden" name="productId" value="<%= product.productData.id %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>Cart is empty!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>